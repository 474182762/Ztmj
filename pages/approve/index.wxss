/* pages/approve/index.wxss */
.approve{

}
.approve .user_img{
  text-align: center;
  padding: 60rpx 0;
  background: #fff;
  border-bottom:1rpx solid #e1e6ea;
  margin-bottom: 30rpx;
}
.approve .user_img image{
  width: 200rpx;
  height: 200rpx;
}
.approve_info{
  background: #fff;
}
.approve_info .info_warp{
  display: flex;
  padding: 0 30rpx;
  font-size: 32rpx;
  height: 110rpx;
  line-height: 110rpx;
  border-bottom: 1rpx solid #e1e6ea;
}
.approve_info .info_warp:last-child{
  border-bottom: none;
}
.approve_info .info_warp label{
  color:#353535;
  width: 228rpx;
}
.approve_info  .friends label{
  width: 380rpx;
}
.approve_info .info_warp .friend_label{
   width: 380rpx;
}
.approve_info .info_warp input{
  height: 110rpx;
  width:100%;
  line-height: 110rpx;
  font-size: 32rpx;
}
.approve  form{
  display: block;
}
.btn_warp{
  width: 100%;
  padding-top: 110rpx;
  background-color: #f1f0f5;
}
.approve .data_btn{
   width:690rpx;
   text-align: center;
   height: 98rpx;
   color: #fff;
   line-height: 98rpx;
  background:#31a2ff;
  border-radius:8rpx;
  
  /* border:none; */
  
 }
.approve .data_btn text{
  font-size: 36rpx;
  color:#fff;
}
/*非住院者*/
.approve .up_img{
  padding: 40rpx 30rpx;
  text-align: left;
  margin-top:30rpx; 
}
.approve .up_img image{
  width: 150rpx;
  height: 150rpx;
  border-bottom: none;
  margin-right: 30rpx;
}
.approve .up_img image:last-child{
  margin-right: 0;
}

.approve .info_alert{
  margin-top: 30rpx;
  padding: 0 44rpx 0 30rpx;
  font-size:28rpx;
  line-height: 1.5;
  color:#f04223;
}