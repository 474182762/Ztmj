/*用户信息*/
.user_warp{
  background: #f1f0f5;
  min-height:100%;
}
.container .user_info{
  width:100%;
  background-color: #fff;
  padding: 60rpx 0;
  text-align: center;
  margin-bottom: 18rpx;
  border-bottom:1rpx solid #e1e6ea;
}
.container .user_info .user_img{
  width:200rpx;
  height: 200rpx;
  margin: 0 auto 30rpx;
}
.container .user_info .user_name{
  display: block;
  margin-bottom: 22rpx;
  font-size:36rpx;
  color:#353535;
}
.container .user_info .user_identity{
  display: block;
  font-size:30rpx;
  color:#acb3b3;
}
/* 用户权限列表*/
.container .user_limit{
  width: 100%;
  padding: 50rpx 0;
  background-color: #fff;
  border-top:1rpx solid #e1e6ea;
  display: flex;
  flex-wrap:wrap;
  /* align-items: center; */
  justify-content: space-between; 
}
.user_limit .list{
  flex:1;
  text-align: center;
}
.user_limit .list image{
  width:100rpx;
  height: 100rpx;
}
.user_limit .list text{
 display: block;
  font-size:28rpx;
  color:#606060;
  
}
/*温馨提示*/
.container .warm_info{
  /* background-color: #fff; */
  font-size:28rpx;
  color:#606060;
  padding: 42rpx 50rpx 0 30rpx
}
.container .warm_info .title{
  display: block;
  margin: 0 0 30rpx 0;
}
.container .warm_info .list{
  display: block;
  line-height: 40rpx;
  /* font-size:14px;
  color:#606060; */
}




