.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color:#fff;
}
.container .title{
  display: block;
  text-align: center;
  color: #353535;
  margin: 90rpx 0 142rpx;
  
}
.identity_list{
  width: 100%;
  display: flex;
  /* flex-direction: column; */
  flex-wrap:wrap;
  align-items: center; 
  text-align: center;
}
.identity_list .list{
  flex: 1;
  padding-bottom: 142rpx;
}

.identity_list .identity_img{
  width: 160rpx;
  height:160rpx;
  display: block;
  margin: 0 45rpx 50rpx;
}
.identity_list .identity_name{
  font-size: 30rpx;
  color: #353535;
}
